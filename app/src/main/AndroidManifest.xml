<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.marlon.mesainc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mesa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mesa"
        android:supportsRtl="true"
        android:theme="@style/Theme.MesaInc">
        <activity android:name=".ui.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.CadastroActivity" />
        <activity android:name=".ui.activity.FeedActivity" />
    </application>

</manifest>